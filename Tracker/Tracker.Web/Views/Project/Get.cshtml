@model ProjectViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "View";
}
<h2>Overview</h2>

<form asp-antiforgery="true">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CreatedDate" />
    <input type="hidden" asp-for="UpdatedDate" />
    <input type="hidden" asp-for="UpdatedBy" />
    <input type="hidden" asp-for="CreatedBy" />

    <div class="form-group">
        <label asp-for="Name"></label>
        <input readonly="readonly" asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TechnologyStack"></label>
        <input readonly="readonly" asp-for="TechnologyStack" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input readonly="readonly" asp-for="StartDate" class="form-control">
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input readonly="readonly" asp-for="EndDate" class="form-control">
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EstimatedHours"></label>
        <input disabled="disabled" asp-for="EstimatedHours" class="form-control">
        <span asp-validation-for="EstimatedHours" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ProjectType"></label>
        <select disabled="disabled" class="form-control" asp-for="ProjectType">
            <option>---select---</option>
            @if (ViewBag.ProjectType is not null)
            {
                foreach (var item in ViewBag.ProjectType as List<Tracker.Core.Utilities.SelectListItem<int>>)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            }
        </select>
        <span asp-validation-for="ProjectType" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="ContactType"></label>
        <select disabled="disabled" class="form-control" asp-for="ContactType">
            <option>---select---</option>
            @if (ViewBag.ContactType is not null)
            {
                @foreach (var item in ViewBag.ContactType as List<Tracker.Core.Utilities.SelectListItem<int>>)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            }
        </select>
        <span asp-validation-for="ContactType" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="LifeCycleModel"></label>

        <select disabled="disabled" class="form-control" asp-for="LifeCycleModel">
            <option>---select---</option>
            @if (ViewBag.LifeCycleModelType is not null)
            {
                @foreach (var item in ViewBag.LifeCycleModelType as List<Tracker.Core.Utilities.SelectListItem<int>>)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            }
        </select>
        <span asp-validation-for="LifeCycleModel" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea readonly="readonly" cols=5 asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group form-check">
        <input disabled="disabled" asp-for="IsClientBillable" type="checkbox" class="form-check-input">
        <label asp-for="IsClientBillable" class="form-check-label"></label>
    </div>
    <div>
        <a type="button" asp-action="Index" asp-controller="Project" class="btn btn-info">Back</a>
    </div>
</form>


<hr class="mt-2" />
<h1> @Model.Name - Time enteries</h1>
<hr class="mt-2" />

<div>
    <div>
        <a asp-action="create" class="btn btn-primary mb-2" asp-route-projectId= "@Model.Id" asp-controller="TimeEntry">Log Time</a>
    </div>
    <table id="tbl_timeenteries" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Log Time</th>
                @*<th>Project Name</th>*@
                <th>Activity Type</th>
                <th>Hours</th>
                <th>Comments</th>
                <th>Approved</th>
                <th>Created By</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>


@section  Scripts{
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
<script>
      $(document).ready(function() {
        $("#tbl_timeenteries").DataTable({
            "processing": true, // for show progress bar
            "serverSide": true, // for process server side
            "filter": true, // this is for disable filter (search box)
            "orderMulti": false, // for disable multiple column at once
            "ajax": {
                "url": "/api/timeentry/GetAllTimEntries",
                "type": "POST",
                "datatype": "json",
                "data": {
                "projectId": $("#Id").val()
                }
            },
            "columnDefs": [{
                "targets": [6],
                "visible": true,
                "searchable": false,
                 "orderable": false
            }],
            "columns": [
                { "data": "logTime", "name": "LogTime", "autoWidth": true },
                //{ "data": "projectName", "name": "Project.Name", "autoWidth": true},
                { "data": "activityTypeView", "name": "ActivityType", "autoWidth": true },
                { "data": "hours", "name": "Hours", "autoWidth": true },
                { "data": "comments", "name": "Comments", "autoWidth": true },
                { "data": "isApproved", "name": "IsApproved", "autoWidth": true,
                "render": function(data, type, full, meta){
                return full.isApproved ? "Yes" : "No"
                }},
                { "data": "createdByName", "name": "CreatedBy", "autoWidth": true },
                {
                    "render": function(data, type, full, meta) {
                       return '<a class="btn btn-success ml-6" href="/timeentry/update/' + full.id + '">Edit</a>'+
                                '<a class="btn btn-danger ml-6" href="/timeentry/delete/' + full.id + '">Delete</a>';
                    }
                }
            ]
        });
    });
</script>
}
